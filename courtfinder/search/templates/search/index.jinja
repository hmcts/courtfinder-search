{% extends "layout/base.jinja" %}

{% block title %}Search{% endblock %}

{% block body %}
  <h1>Search</h1>


  <form action="/search/postcode" method="get">
    <p>
      Enter postcode: 
      <input type="text" name="postcode" />
    </p>
    <p>
      <select name="area_of_law">
        <option id="0">All</option>
      {% for aol in areas_of_law %}
        <option value="{{aol.name}}">{{aol.name}}</option>
      {% endfor %}
      </select>
    </p>
    <button type="submit">Search</button>
  </form>

{% endblock %}