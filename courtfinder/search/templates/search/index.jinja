{% extends "layout/base.jinja" %}
{% load i18n %}
{% block page_title %}{% trans "Find the right court or tribunal" %}{% endblock %}

{% block content %}
  <div id="global-breadcrumb" class="header-context">
    <ol role="breadcrumbs" class="group">
      <li><a href="{% url 'staticpages:home' %}">{% trans "Home" %}</a></li>
    </ol>
  </div>
  <div id="search-index-page" class="content inner cf">
    <header class="page-header">
      <h1>{% trans "Find the right court or tribunal" %}</h1>
    </header>
    {% if show %}
      <div id='emergency_message_box'>
        {{emergency_message|safe}}
      </div>
    {% endif %}
    <div id="index_extra_information_message">
        <span>{% trans "Use this service to find contact details for court and tribunal venues." %}</span>
    </div>
    <form class="form-block" method="get" action="{% url 'search:searchby' %}">
      <div class="options">
        <div class="main-option">
          {% trans "Search by:" %}
          <ul>
            <li>
              <label>
                <input type="radio" name="searchby" value="aol" checked />
                {% trans "The Area of Law I am interested in (recommended)" %}</label>
            </li>
            <li>
              <label>
                <input type="radio" name="searchby" value="address" />
                {% trans "Court Name or Address" %}</label>
            </li>
            <li>
              <label>
                <input type="radio" name="searchby" value="list" />
                {% trans "A-Z list of all courts" %}</label>
            </li>
            <li>
              <label>
                <input type="radio" name="searchby" value="courtcode" />
                {% trans "Court location code" %}</label>
            </li>
          </ul>
          <button class="button-get-started button" id="start-button" class="button" type="submit">{% trans "Next" %}</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
