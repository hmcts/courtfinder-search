{% extends "layout/base.jinja" %}
{% load static %}

{% block page_title %}Search results{% endblock %}

{% block content %}
<div id="global-breadcrumb" class="header-context">
  <ol role="breadcrumbs" class="group">
    <li><a href="{% url 'staticpages:home' %}">Home</a></li>
    <li><a href="{% url 'search:search' %}">Find a court or tribunal</a></li>
    {% if query %}
      {% if courtcode_search == True %}
        <li><a href="{% url 'search:courtcode' %}">Search by Court location code</a></li>
      {% else %}
        <li><a href="{% url 'search:address' %}">Search by name or address</a></li>
      {% endif %}
    {% else %}
    <li><a href="{% url 'search:aol' %}?aol={{aol|urlencode}}">About your issue</a></li>
    {% if spoe %}
    <li><a href="{% url 'search:spoe' %}?aol={{aol|urlencode}}&spoe={{spoe|urlencode}}">Additional info</a></li>
    {% endif %}
    <li><a href="{% url 'search:postcode' %}?aol={{aol|urlencode}}&spoe={{spoe|urlencode}}&postcode={{postcode|urlencode}}">Search by postcode</a></li>
    {% endif %}
  </ol>
</div>
<div id="search-results-page" class="content inner cf">
  <header class="page-header">
    <h1>Search results</h1>
  </header>
  {% if search_results %}
  <div class="search-results">
    {% if query %}
      <p class="text-secondary">
        <span id="number-of-results">{{ open_court_count }}</span> result{{ open_court_count|pluralize }}
      </p>
    {% else %}
    {% if spoe == "nearest" and aol == "Money claims"%}
      {% if search_results|length == 1 %}
        <p>The nearest County Court for your hearing is:</p>
      {% else %}
        <p>The nearest County Courts for your hearing are:</p>
      {% endif %}
    {% else %}
      {% if search_results|length == 1 %}
        <p>This is the court or tribunal nearest {{ postcode }}.</p>
      {% else %}
        <p>These are the <span id="number-of-results">{{ search_results|length }}</span> courts or tribunals nearest {{ postcode }}.</p>
      {% endif %}
    {% endif %}
      {% if in_scotland %}
    <p id="scotland"><em>This tool shows courts and tribunals in England and Wales, and some tribunals in Scotland and Northern Ireland.</em></p>
      {% endif %}
    {% endif %}
    {% if aol == "Social security" or aol == "Children"%}
      <p>Some tribunal hearings may take place at other venues.</p>
      <p><a href="http://sscs.venues.tribunals.gov.uk/venues/venues.htm" title="Other Social Security and Child Support Tribunal venues.">Social Security and Child Support Tribunal Venues</a><p>
    {% endif %}
    {% if aol == "Employment" %}
      <p>Some tribunal hearings may take place at other venues.</p>
      <p><a href="https://www.gov.uk/guidance/employment-tribunal-offices-and-venues" title="Other local Employment Tribunal venues.">Employment Tribunal Venues</a><p>
    {% endif %}
    <hr/>
    <ul id='court-results'>
      {% for court in search_results %}
      {% if court.displayed %}
      <li>
        <h2>{{ court.name }}</h2>
        <div class="court-addresses">
          <p>
            <span class="court-result-heading">Write to us:</span><br/>
            {% with a=court.address %}
            <span class="court-address">
            {% for line in a.address_lines %}
              {% if line != "" %}
                {{ line }}<br/>
              {% endif %}
              {% endfor %}
            </span>
            <span class="court-town">{{a.town}}</span><br/>
            <span class="court-postcode">{{a.postcode}}</span>
            {% endwith %}
          </p>

          <p>
            {% if court.number %}
              <div><span class="court-result-heading">Crown Court location code:</span> <span>{{ court.number }}</span></div>
            {% endif %}
            {% if court.cci_code %}
              <div><span class="court-result-heading">County Court location code:</span> <span>{{ court.cci_code }}</span></div>
            {% endif %}
            {% if court.magistrate_code %}
              <div><span class="court-result-heading">Magistrates' Court location code:</span> <span>{{ court.magistrate_code }}</span></div>
            {% endif %}
            {% if court.dx_number %}
              <div><span class="court-result-heading"><abbr title="document exchange">DX</abbr>:</span> <span>{{ court.dx_number }}</span></div>
            {% endif %}
          </p>
        </div>

        <div class="court-aol">
          {% if court.areas_of_law %}
            {% if court.hide_aols %}
              <p class="court-result-heading">More information...</p>
            {% else %}
              <p class="court-result-heading">Cases heard at this venue</p>
            {% endif %}
            <ul>
            {% for aol in court.areas_of_law %}
              {% if aol.external_link %}
                <li><a href="{{aol.display_url}}" title="{{aol.external_link_desc}}">
                <span class='screen_reader_hide'>{{aol.external_link_desc}}</span>{{ aol.name }}</a></li>
              {% else %}
                <li>{{ aol.name }}</li>
              {% endif %}
            {% endfor %}
            </ul>
          {% endif %}
        </div>

        <p class="clear">
          {% if query %}
            {% if courtcode_search == True %}
              <a class="more-details-link" href="{% url 'courts:court' court.slug %}?courtcode={{ query }}">More details about {{ court.name }}</a>
            {% else %}
              <a class="more-details-link" href="{% url 'courts:court' court.slug %}?q={{ query }}">More details about {{ court.name }}</a>
            {% endif %}
          {% else %}
            <a class="more-details-link" href="{% url 'courts:court' court.slug %}?aol={{ aol }}&postcode={{ postcode }}">More details about {{ court.name }}</a>
          {% endif %}
        </p>
        <hr class="clear"/>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</div>
{% endblock %}
{% block javascripts %}
    <script src='{% static "javascripts/application.js" %}'></script>
{% endblock %}

